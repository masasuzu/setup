#
# ~/.screenrc
#

escape ^]]

defutf8 on
defencoding utf-8
encoding utf-8 utf-8

hardstatus alwayslastline "[%m/%d %0c] %0`%-w%{= bW}%n %t%{-}%+w"

defscrollback 10000
vbell off
startup_message off

shell -$SHELL
#shelltitle "\$ |\$ "

term xterm-256color
defbce on
attrcolor b ".I"
#termcapinfo xterm* 'is=\E[!p\E[?4l\E[4l\E>'
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
#termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

#multiuser on
#acladd kan
#aclchg kan +rwx "#?"

# ~/.screenrc
